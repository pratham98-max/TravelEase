<h3 class="text-center mb-4">üìä Admin Dashboard</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card p-3 shadow-sm mb-4">
            <h5 class="text-primary">All Bookings</h5>
            <% if (bookings && bookings.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Hotel</th>
                        <th>Check-in</th>
                        <th>Check-out</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(function(b) { %>
                    <tr>
                        <td><%= b.name %></td>
                        <td><%= b.hotel %></td>
                        <td><%= b.checkin %></td>
                        <td><%= b.checkout %></td>
                        <td>‚Çπ<%= b.price %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <p>No bookings yet.</p>
            <% } %>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card p-3 shadow-sm mb-4">
            <h5 class="text-success">All Reviews</h5>
            <% if (reviews && reviews.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Hotel</th>
                        <th>Rating</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    <% reviews.forEach(function(r) { %>
                    <tr>
                        <td><%= r.hotel %></td>
                        <td><%= r.rating %> ‚≠ê</td>
                        <td><%= r.comment %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <p>No reviews yet.</p>
            <% } %>
        </div>
    </div>
</div>
